<UserControl
    x:Class="Dpa.UserControl1"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="0.55*,4*,4*,Auto" RowDefinitions=".5*,4*,4*,.5*">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Background="Black"
            Content="00"
            Foreground="Aqua" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Background="Black" />
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            RowDefinitions="2*,2*,2*,2*">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Background="Aqua"
                Content="L10" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Background="Red"
                Content="L20" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Background="BurlyWood"
                Content="L30" />

        </Grid>

    </Grid>
</UserControl>
